#
# $Id: wl_default 830714 2023-09-27 11:19:34Z $

# wl driver base
WL=1

# features
WLLED=1
WL11BE=1
WL11AX=1
WL11AC=1
WL11AC_160=1
WLATF=1
WLTAF=1
WL_VASIP_MU_INFO=1
WL11H=1
WL11D=1
BAND2G=1
BAND5G=1
BAND6G=1
WLRM=1
WLCNT=1
WLTINYDUMP=1
PKTQ_LOG=1
WLAMSDU=1
WLAMSDU_SWDEAGG=1
BCMROMOFFLOAD=0
WLCOEX=1
WL_NOPHYIPA=0
WLHOSTVARS=1
WLOLPC=1
WLTXBF=1
WL_MU_TX=1
WL_MU_RX=1
WL_PROT_OBSS=1
WL_OBSS_DYNBW=1
WL_PSMX=1
WL_SMAC=1
CPUDBG_XFER=1
WL_PSMR1=1
WL_IAPP=1
WL_SBFNIC=1
WL_RXTX_UTILIZATION=1

WLPROBRESP_MAC_FILTER=1
WLAUTHRESP_MAC_FILTER=1

# BCMEXTNVM = 1, is used for Windows internal & external driver debug & BU.
# It enables NVRAM file read for the external & internal Windows drivers,
# which otherwise is prohibited. Hence by default set to 0.
BCMEXTNVM=0

BCMECICOEX=1
#ifndef LINUX_CRYPTO
LINUX_CRYPTO=0
#endif

BCM_DMA_CT=1
BCM_DMA_INDIRECT=1

# For BCM47XX platforms
ifneq ($(CONFIG_MACH_BRCM_NS),)
BCMDMASGLISTOSL=1
endif

HNDBME=1
HNDDMA=1
BULKRXDMA=1
WL_SCAN_DFS_HOME=1
WL_CHANSPEC_TXPWR_MAX=1
AVS=1
TXSHAPER=1
TXFDIQ=1

#enable tempsense by default
BCMDBG_TEMPSENSE=1

# Tx Status Transferred using M2M DMA
STS_XFER_TXS=1
# PhyRx Status is transferred and linked using 12bit Seqnum
STS_XFER_PHYRXS_SEQ=1
# PhyRx Status is transferred as a standalone packet
STS_XFER_PHYRXS_PKT=1
# PhyRx Status Transfer over Rx FIFO-3
STS_XFER_PHYRXS_MODE_FIFO=1
# PhyRx Status Transferred using M2M DMA
STS_XFER_PHYRXS_MODE_M2M=1
# Trigger Rx Processing on PhyRx Status Interrupt
STS_XFER_PHYRXS_RECV_PROC=1

# Packet Classification for NIC(PCN) Mode
BCMRX_PCN=1
# Preinit PKTPOOL - Packet Classification for NIC(PCN) Mode
BCMRX_PCN_PKTPOOL=1

#BA256 support
WL_BA256=1

WLDEAUTH_INTRANSIT_FILTER=1
WLPROBRESP_INTRANSIT_FILTER=1

RFEM=1

# other debug
CHAN_SWITCH_HIST=1
WL_ALL_PASSIVE=1
